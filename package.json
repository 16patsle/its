{
  "name": "its",
  "productName": "its",
  "version": "1.2.0",
  "description": "Elegant itslearning desktop app",
  "license": "MIT",
  "repository": "16patsle/its",
  "author": {
    "name": "Patrick Sletvold",
    "email": "patricksletvold@hotmail.com",
    "url": "github.com/16patsle"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "test": "xo",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --mac --linux --win"
  },
  "dependencies": {
    "electron-context-menu": "^0.9.1",
    "electron-debug": "^1.4.0",
    "electron-dl": "^1.0.0",
    "electron-is-dev": "^0.3.0",
    "electron-localshortcut": "^2.0.0",
    "electron-log": "^2.0.2",
    "electron-store": "^1.1.0",
    "electron-updater": "^2.21.3",
    "element-ready": "^2.2.0",
    "facebook-locales": "^1.0.464"
  },
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-builder": "^20.6.2",
    "xo": "*"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ],
    "space": 2,
    "prettier": true
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "build": {
    "files": [
      "**/*",
      "!media${/*}"
    ],
    "appId": "com.patricksletvold.its",
    "mac": {
      "category": "public.app-category.social-networking",
      "electronUpdaterCompatibility": ">=2.21.3"
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
